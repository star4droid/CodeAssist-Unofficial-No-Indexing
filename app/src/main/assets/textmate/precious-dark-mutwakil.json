{
  "name": "darcula",
  "settings": [
    /* ───────────── 1. GLOBAL COLORS ───────────── */
    {
      "settings": {
        "background": "#1e1b19",
        "foreground": "#e8e1dd",
        "lineHighlight": "#2b2b2b",
        "selection": "#214283",
        "highlightedDelimitersForeground": "#57f6c0"
      }
    },

    /* ───────────── 2. TOKEN COLORS (your palette) ───────────── */
    { "name": "Comment",                                   "scope": "comment",                                                                 "settings": { "foreground": "#bdbdbd" } },

    { "name": "Operator Keywords",                         "scope": "keyword.operator,keyword.operator.logical,keyword.operator.relational,keyword.operator.assignment,keyword.operator.comparison,keyword.operator.ternary,keyword.operator.arithmetic,keyword.operator.spread", "settings": { "foreground": "#4fc3f7" } },

    { "name": "Strings",                                   "scope": "string,string.character.escape,string.template.quoted,string.template.quoted.punctuation,string.template.quoted.punctuation.single,string.template.quoted.punctuation.double,string.type.declaration.annotation,string.template.quoted.punctuation.tag", "settings": { "foreground": "#8bc34a" } },

    { "name": "String Interpolation Begin and End",        "scope": "punctuation.definition.template-expression.begin,punctuation.definition.template-expression.end", "settings": { "foreground": "#f0be4b" } },

    { "name": "String Interpolation Body",                 "scope": "expression.string,meta.template.expression",                               "settings": { "foreground": "#e8e1dd" } },

    { "name": "Number",                                    "scope": "constant.numeric",                                                        "settings": { "foreground": "#8bc34a" } },

    { "name": "Built-in constant",                         "scope": "constant.language,variable.language",                                       "settings": { "foreground": "#f0be4b" } },

    { "name": "User-defined constant",                     "scope": "constant.character, constant.other",                                        "settings": { "foreground": "#f0be4b" } },

    { "name": "Keyword",                                   "scope": "keyword,keyword.operator.new,keyword.operator.delete,keyword.operator.static,keyword.operator.this,keyword.operator.expression", "settings": { "foreground": "#ff6060" } },

    { "name": "Types, Class Types",                        "scope": "entity.name.type,meta.return.type,meta.type.annotation,meta.type.parameters,support.type.primitive", "settings": { "foreground": "#4fc3f7" } },

    { "name": "Storage type",                              "scope": "storage,storage.type,storage.modifier,storage.arrow",                       "settings": { "foreground": "#ff6060" } },

    { "name": "Class constructor",                         "scope": "class.instance.constructor,new.expr entity.name.type",                      "settings": { "foreground": "#64b5f6" } },

    { "name": "Function",                                  "scope": "support.function, entity.name.function",                                    "settings": { "foreground": "#64b5f6" } },

    { "name": "Function Types",                            "scope": "annotation.meta.ts, annotation.meta.tsx",                                   "settings": { "foreground": "#e8e1dd" } },

    { "name": "Function Argument",                         "scope": "variable.parameter, operator.rest.parameters",                              "settings": { "foreground": "#e8e1dd" } },

    { "name": "Variable, Property",                        "scope": "variable.property,variable.other.property,variable.other.object.property,variable.object.property,support.variable.property", "settings": { "foreground": "#ba68c8" } },

    { "name": "Module Name",                               "scope": "quote.module",                                                              "settings": { "foreground": "#8bc34a" } },

    { "name": "Markup Headings",                           "scope": "markup.heading",                                                            "settings": { "foreground": "#f0be4b" } },

    { "name": "Tag name",                                  "scope": "punctuation.definition.tag.html, punctuation.definition.tag.begin, punctuation.definition.tag.end, entity.name.tag", "settings": { "foreground": "#ff6060" } },

    { "name": "Tag attribute",                             "scope": "entity.other.attribute-name",                                               "settings": { "foreground": "#e8e1dd" } },

    { "name": "Object Keys",                               "scope": "meta.object-literal.key",                                                   "settings": { "foreground": "#ba68c8" } },

    { "name": "TypeScript Class Modifiers",                "scope": "storage.modifier.ts",                                                       "settings": { "foreground": "#ff6060" } },

    { "name": "TypeScript Type Casting",                   "scope": "ts.cast.expr,ts.meta.entity.class.method.new.expr.cast,ts.meta.entity.type.name.new.expr.cast,ts.meta.entity.type.name.var-single-variable.annotation,tsx.cast.expr,tsx.meta.entity.class.method.new.expr.cast,tsx.meta.entity.type.name.new.expr.cast,tsx.meta.entity.type.name.var-single-variable.annotation", "settings": { "foreground": "#4fc3f7" } },

    { "name": "TypeScript Type Declaration",               "scope": "ts.meta.type.support,ts.meta.type.entity.name,ts.meta.class.inherited-class,tsx.meta.type.support,tsx.meta.type.entity.name,tsx.meta.class.inherited-class,type-declaration,enum-declaration", "settings": { "foreground": "#4fc3f7" } },

    { "name": "TypeScript Method Declaration",             "scope": "function-declaration,method-declaration,method-overload-declaration,type-fn-type-parameters", "settings": { "foreground": "#64b5f6" } },

    { "name": "Documentation Block",                       "scope": "comment.block.documentation",                                               "settings": { "foreground": "#8bc34a" } },

    { "name": "Documentation Highlight (JSDoc)",           "scope": "storage.type.class.jsdoc",                                                  "settings": { "foreground": "#f0be4b" } },

    { "name": "Import-Export-All (*) Keyword",             "scope": "constant.language.import-export-all",                                       "settings": { "foreground": "#e8e1dd" } },

    { "name": "Object Key Seperator",                      "scope": "objectliteral.key.separator, punctuation.separator.key-value",              "settings": { "foreground": "#e8e1dd" } },

    { "name": "Regex",                                     "scope": "regex",                                                                     "settings": { "fontStyle": " italic" } },

    { "name": "Typescript Namespace",                      "scope": "ts.meta.entity.name.namespace,tsx.meta.entity.name.namespace",              "settings": { "foreground": "#e8e1dd" } },

    { "name": "Regex Character-class",                     "scope": "regex.character-class",                                                     "settings": { "foreground": "#e8e1dd" } },

    { "name": "Class Name",                                "scope": "entity.name.type.class",                                                    "settings": { "foreground": "#e8e1dd" } },

    { "name": "Class Inheritances",                        "scope": "entity.other.inherited-class",                                              "settings": { "foreground": "#4fc3f7" } },

    { "name": "Documentation Entity",                      "scope": "entity.name.type.instance.jsdoc",                                           "settings": { "foreground": "#64b5f6" } },

    { "name": "YAML entity",                               "scope": "yaml.entity.name,yaml.string.entity.name",                                  "settings": { "foreground": "#f0be4b" } },

    { "name": "YAML string value",                         "scope": "yaml.string.out",                                                           "settings": { "foreground": "#e8e1dd" } },

    { "name": "Ignored (Exceptions Rules)",                "scope": "meta.brace.square.ts,block.support.module,block.support.type.module,block.support.function.variable,punctuation.definition.typeparameters.begin,punctuation.definition.typeparameters.end", "settings": { "foreground": "#e8e1dd" } },

    { "name": "Regex",                                     "scope": "string.regexp",                                                             "settings": { "foreground": "#f0be4b" } },

    { "name": "Regex Group/Set",                           "scope": "punctuation.definition.group.regexp,punctuation.definition.character-class.regexp", "settings": { "foreground": "#64b5f6" } },

    { "name": "Regex Character Class",                     "scope": "constant.other.character-class.regexp, constant.character.escape.ts",       "settings": { "foreground": "#e8e1dd" } },

    { "name": "Regex Or Operator",                         "scope": "expr.regex.or.operator",                                                    "settings": { "foreground": "#e8e1dd" } },

    { "name": "Tag string",                                "scope": "string.template.tag,string.template.punctuation.tag,string.quoted.punctuation.tag,string.quoted.embedded.tag, string.quoted.double.tag", "settings": { "foreground": "#8bc34a" } },

    { "name": "Tag function parenthesis",                  "scope": "tag.punctuation.begin.arrow.parameters.embedded,tag.punctuation.end.arrow.parameters.embedded", "settings": { "foreground": "#e8e1dd" } },

    { "name": "Object-literal key class",                  "scope": "object-literal.object.member.key.field.other,object-literal.object.member.key.accessor,object-literal.object.member.key.array.brace.square", "settings": { "foreground": "#e8e1dd" } },

    { "name": "CSS Property-value",                        "scope": "property-list.property-value,property-list.constant",                       "settings": { "foreground": "#8bc34a" } },

    { "name": "CSS Property variable",                     "scope": "support.type.property-name.variable.css,support.type.property-name.variable.scss,variable.scss", "settings": { "foreground": "#4fc3f7" } },

    { "name": "CSS Property entity",                       "scope": "entity.other.attribute-name.class.css,entity.other.attribute-name.class.scss,entity.other.attribute-name.parent-selector-suffix.css,entity.other.attribute-name.parent-selector-suffix.scss", "settings": { "foreground": "#f0be4b" } },

    { "name": "CSS Property-value",                        "scope": "property-list.property-value.rgb-value, keyword.other.unit.css,keyword.other.unit.scss", "settings": { "foreground": "#4fc3f7" } },

    { "name": "CSS Property-value function",               "scope": "property-list.property-value.function",                                     "settings": { "foreground": "#f0be4b" } },

    { "name": "CSS constant variables",                    "scope": "support.constant.property-value.css,support.constant.property-value.scss", "settings": { "foreground": "#8bc34a" } },

    { "name": "CSS Tag",                                   "scope": "css.entity.name.tag,scss.entity.name.tag",                                "settings": { "foreground": "#ff6060" } },

    { "name": "CSS ID, Selector",                          "scope": "meta.selector.css, entity.attribute-name.id, entity.other.attribute-name.pseudo-class.css,entity.other.attribute-name.pseudo-element.css", "settings": { "foreground": "#f0be4b" } },

    { "name": "CSS Keyword",                               "scope": "keyword.scss,keyword.css",                                                  "settings": { "foreground": "#ff6060" } },

    { "name": "Triple-slash Directive Tag",                "scope": "triple-slash.tag",                                                          "settings": { "foreground": "#e8e1dd", "fontStyle": "italic" } },

    /* ───────────── 3. EXTRA TOKENS ───────────── */
    { "scope": "token.info-token",  "settings": { "foreground": "#4fc3f7" } },
    { "scope": "token.warn-token",  "settings": { "foreground": "#FFEB3B" } },
    { "scope": "token.error-token", "settings": { "foreground": "#f44336" } },
    { "scope": "token.debug-token", "settings": { "foreground": "#ba68c8" } },

    /* ───────────── 4. LANGUAGE-SPECIFIC FIXES ───────────── */
    { "name": "Python operators", "scope": "keyword.operator.logical.python", "settings": { "foreground": "#ff6060" } },
    { "name": "Dart class type",  "scope": "support.class.dart",               "settings": { "foreground": "#ff6060" } },
    { "name": "PHP variables",    "scope": ["variable.language.php", "variable.other.php"], "settings": { "foreground": "#ba68c8" } },
    { "name": "Perl specific",    "scope": ["variable.other.readwrite.perl"],               "settings": { "foreground": "#ba68c8" } },
    { "name": "PHP variables",    "scope": ["variable.other.property.php"],                 "settings": { "foreground": "#ff6060" } },
    { "name": "PHP variables",    "scope": ["support.variable.property.php"],               "settings": { "foreground": "#64b5f6" } }
  ]
}
